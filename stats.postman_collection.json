		{
			"name": "get view stats",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();\r",
							"\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.expect(pm.response.code).to.eql(200);\r",
							"});\r",
							"\r",
							"pm.test(\"User requests amount\", function () {\r",
							"    pm.response.to.be.withBody;\r",
							"    pm.response.to.be.json;\r",
							"    pm.expect(jsonData.length, 'List length must be 1').to.eql(1);\r",
							"});\r",
							"\r",
							"var app = pm.collectionVariables.get('app');\r",
							"var uri = pm.collectionVariables.get('uri');\r",
							"var hits = pm.collectionVariables.get('hits');\r",
							"\r",
							"pm.test(\"Test viewstats 'app' field\", function () {\r",
							"    pm.expect(jsonData[0]).to.have.property('app');\r",
							"    pm.expect(jsonData[0].app, '\"app\" must be ${app}').to.eql(app);\r",
							"});\r",
							"\r",
							"pm.test(\"Test viewstats 'uri' field\", function () {\r",
							"    pm.expect(jsonData[0]).to.have.property('uri');\r",
							"    pm.expect(jsonData[0].uri, '\"uri\" must be ${uri}').to.eql(uri);\r",
							"});\r",
							"\r",
							"pm.test(\"Test viewstats 'hits' field\", function () {\r",
							"    pm.expect(jsonData[0]).to.have.property('hits');\r",
							"    pm.expect(jsonData[0].hits, '\"hits\" must be ${hits}').to.eql(Number(hits));\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
